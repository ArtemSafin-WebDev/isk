{{#extend "layout"}}
{{#content "main"}}

<section class="news">
    <div class="container">
        <div class="news__intro">
            <div class="news__intro-row">
                <div class="news__intro-left-col">
                    <div class="news__intro-content">
                        <div class="news__intro-bg">
                            <img src="img/news.jpg" alt="" class="news__intro-bg-image">
                        </div>
                        <img src="img/about-spheres.svg" alt="" class="news__sphere">
                        <div class="news__intro-date">
                            <div class="news__intro-date-day">
                                16
                            </div>
                            <div class="news__intro-date-month">
                                October
                            </div>
                        </div>
                        <h1 class="news__intro-title">
                            International<br>
                            Day 2020
                        </h1>
                    </div>
                </div>
                <div class="news__intro-right-col">
                    <div class="news__intro-categories">
                        <a href="#" class="news__intro-categories-link active">
                            news
                        </a>
                        <a href="#" class="news__intro-categories-link">
                            media
                        </a>
                    </div>
                    <div class="news__intro-dates">
                        <ul class="news__intro-dates-list">
                            <li class="news__intro-dates-list-item active">
                                <a href="#" class="news__intro-dates-link">
                                    2020
                                </a>
                            </li>
                            <li class="news__intro-dates-list-item">
                                <a href="#" class="news__intro-dates-link">
                                    2019
                                </a>
                            </li>
                            <li class="news__intro-dates-list-item">
                                <a href="#" class="news__intro-dates-link">
                                    2018
                                </a>
                            </li>
                            <li class="news__intro-dates-list-item">
                                <a href="#" class="news__intro-dates-link">
                                    2017
                                </a>
                            </li>
                            <li class="news__intro-dates-list-item">
                                <a href="#" class="news__intro-dates-link">
                                    2016
                                </a>
                            </li>
                            <li class="news__intro-dates-list-item">
                                <a href="#" class="news__intro-dates-link">
                                    2015
                                </a>
                            </li>
                        </ul>
                        <a href="#" class="news__intro-back">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="news__article-text">
            <p>
                We are happy to start our new academic year, 2020 - 2021! It’s also opening day for ISK’s new Fedo
                Secondary School building. We wish all the students, staff and parents best of luck! Together we make
                ISK the best place to study!
            </p>
        </div>
        <ul class="news__list">
           
            <li class="news__list-item">
                <a href="#" class="news__card">
                    <div class="news__card-content">
                        <div class="news__card-date">
                            10 March
                        </div>
                        <h4 class="news__card-title">
                            ISK's Got Talent Show 2020
                        </h4>
                    </div>
                    <div class="news__card-photos">
                        <div class="news__card-photo-container">
                            <img src="img/2.jpg" alt="" class="news__card-photo">
                        </div>
                    </div>
                </a>
            </li>
            <li class="news__list-item">
                <a href="#" class="news__card">
                    <div class="news__card-content">
                        <div class="news__card-date">
                            6 February
                        </div>
                        <h4 class="news__card-title">
                            Visiting Authors
                        </h4>
                    </div>
                    <div class="news__card-photos">
                        <div class="news__card-photo-container">
                            <img src="img/3.jpg" alt="" class="news__card-photo">
                        </div>
                    </div>
                </a>
            </li>
           
        </ul>
    </div>
</section>

{{/content}}
{{/extend}}